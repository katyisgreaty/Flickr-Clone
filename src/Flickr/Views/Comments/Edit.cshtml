@model Flickr.Models.Comment

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit</h2>
<hr />
<h4>Edit this comment: @Html.DisplayFor(model => model.Description)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CommentId)
    @*@Html.HiddenFor(model => model.PictureId)*@

    @Html.LabelFor(model => model.Description)
    @Html.EditorFor(model => model.Description)

    @Html.LabelFor(model => model.PictureId)
    @Html.DropDownList("PictureId")

    <input type="submit" value="Save" />
}
<p>@Html.ActionLink("Back to list", "Index", "Pictures")</p>