@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Flickr.Models.Picture

<img src="@Html.DisplayFor(model => model.Url)" />
<br />
<br />

 <h2>@Html.DisplayFor(model => model.Caption)</h2>

<h3>Tags:</h3>
@if (Model.PicturesTags.Count != 0)
{
    <p>There should be a tag here</p>
    @foreach (var pictureTags in Model.PicturesTags)
    {
        <p>@pictureTags.Tag.Word</p>
    }
}
else
{
    <p>You haven't added any tags to this picture yet.</p>
}



<h3>Comments:</h3>
<ol>
    @if (Model.Comments.Count != 0)
    {
        @foreach (var comment in Model.Comments)
        {
            <li>
                <h5>@comment.Description</h5>
                <p>@Html.ActionLink("Edit", "Edit", "Comments", new { id = comment.CommentId })</p>
                <p>@Html.ActionLink("Delete", "Delete", "Comments", new { id = comment.CommentId })</p>
            </li>

        }
    }
    else
    {
        <p>There are no comments on this picture yet!</p>

    }
</ol>

<p>@Html.ActionLink("Leave a new comment", "Create", "Comments")</p>


<p>@Html.ActionLink("Back to list", "Index")</p>
